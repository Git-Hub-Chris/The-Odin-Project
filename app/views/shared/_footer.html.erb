<footer id="footer">
  <div class="footer-logo">
    <%= render "shared/logo_text" %>
  </div>
  <div class="footer-social">
    <%= link_to "https://github.com/TheOdinProject" do %><span class="accent fa fa-github"/><% end %>
    <%= link_to image_tag("icons/icon-gitter.svg"), "https://gitter.im/TheOdinProject"%>
    <%= link_to "https://www.facebook.com/theodinproject/" do %><span class="accent fa fa-facebook"/><% end %>
    <%= link_to "https://twitter.com/TheOdinProject" do %><span class="accent fa fa-twitter"/><% end %>
  </div>
  <div class="footer-links">
    <div class="footer-links-container">
      <%= link_to "About", about_path %>
      <%= link_to "FAQ", faq_path %>
      <%= link_to "Blog", medium_blog_path, target: "_blank" %>
    </div>
    <div class="footer-links-container">
      <%= link_to "Success Stories", success_stories_path %>
      <%= link_to "Contribute", contributing_path %>
      <%= link_to "Terms of Use", legal_path %>
    </div>
  </div>


</footer>
