        <div class="success-content-full">
          <p class="student-name"><%= story[:student_name] %></p>
          <p><%= story[:story_content] %></p>
        </div>
        <div class="completed-course">
          <p>Completed <%= story[:completed_course] %></p>
        </div>
      </div>
    <% end %>
  </div>

  <div class="success-stories-sign-up">
    <p>Start learning for free now!</p>
    <%= link_to 'Sign Up', sign_up_path(ref: 'success_stories'), class:'signup-button' %>
  </div>
</div>
