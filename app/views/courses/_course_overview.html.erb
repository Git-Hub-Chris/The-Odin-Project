<div class="course-card-header <%= course_completed_class?(course, user) %>">

  <%= link_to course, class: 'course-card-header__link' do %>
    <div class='course-card-header__image'>
      <%= render 'shared/course_badge', course: course, user: user %>
    </div>
  <% end %>

  <div class="">
    <h2 class="course-card-header__title"><%= course.title %></h2>
    <span class="course-card-header__sub-title"><%= course.lessons.size %> lessons</span>
  </div>

  <%= link_to 'Open Course', course, class: "button #{open_course_button_style(course, user)} course-card-header__button" %>
</div>

<div class="row course-description-wrapper">
  <div class="col">
    <div class="course-description">
      <p class="grey"><%= course.description %></p>
    </div>
  </div> <!-- /.col -->
</div> <!-- /.row -->
