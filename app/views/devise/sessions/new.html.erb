<div id="devise-form">

  <h2 class="text-center">Sign in</h2>
  <div class="row">
    <div class="social-wrapper text-center">
      <%- if @user.password_required? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
          <%= link_to "<i class=\"fa fa-#{provider} providers-button\"></i>#{provider.to_s.titleize}".html_safe, omniauth_authorize_path(resource_name, provider), id: "github", class: 'btn btn-social btn-large btn-lg btn-github' %><br />
        <% end -%>
      <% end -%>
    </div>
  </div>
  <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-horizontal" } ) do |f| %>
    <div class="form-inputs text-center">
      <h3>or</h3>
      <div class="input-padding">
        <%= f.email_field :email, :required => false, :autofocus => true, placeholder: "Email" %>
      </div>
      <div class="input-padding">
        <%= f.password_field :password, :required => false, placeholder: "Password" %>
      </div>
    </div>

    <%= f.input :remember_me, :as => :boolean, :label => false, :inline_label => true if devise_mapping.rememberable? %>
    <div class="text-center">
    <%= f.button :submit, "Sign in", :class => "btn-primary btn-large" %>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
