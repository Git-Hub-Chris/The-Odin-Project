<div class="mb-12">
  <h2 class="font-bold text-gray-500 text-2xl text-center mb-8">Project Submissions</h2>

  <% if project_submissions.any? %>
    <%= react_component(
        "project-submissions/user-project-submissions",
        {
          userId: current_user&.id,
          submissions: project_submissions.map { |submission| ProjectSubmissionSerializer.as_json(submission, current_user) },
        }
    ) %>
  <% else %>
    <h3 class="text-gray-500 text-center text-xl">No submissions yet</h3>
  <% end %>
</div>
