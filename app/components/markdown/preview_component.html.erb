<div id="preview-container">
  <%= render ContentContainerComponent.new(classes: 'pt-6') do %>
    <% if markdown.present? %>
      <%= sanitize MarkdownConverter.new(markdown).as_html, tags: allowed_tags, attributes: allowed_attributes %>
    <% else %>
      <p>Nothing to preview yet!</p>
    <% end %>
  <% end %>
</div>
