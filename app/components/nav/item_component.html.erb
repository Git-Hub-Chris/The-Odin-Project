<% if mobile %>
  <%= link_to path, class: "text-slate-600 hover:bg-slate-50 hover:text-slate-900 group flex items-center px-2 py-2 text-base font-medium dark:text-slate-300 dark:hover:text-slate-200 dark:hover:bg-slate-700/60 #{ 'bg-slate-100 text-slate-900 dark:bg-slate-700/60 dark:text-slate-3  00' if active?}", data: { test_id: test_id }  do %>
    <%= inline_svg_tag icon_path, class: "text-slate-400 group-hover:text-slate-500 dark:text-slate-200 dark:group-hover:text-slate-200 mr-4 h-6 w-6", aria: true, title: "#{text} icon" %>
    <%= text %>
  <% end %>
<% else %>
  <%= link_to text, path, class: "border-transparent text-slate-500 dark:text-slate-300 hover:border-slate-300 hover:text-slate-700 inline-flex items-center px-1 pt-1 border-b-2 text-md font-semibold #{ 'border-gold-500 text-slate-900' if active?}", data: { test_id: test_id } %>
<% end %>
