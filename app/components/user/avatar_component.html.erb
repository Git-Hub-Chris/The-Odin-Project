<% if current_user.avatar.present? %>
  <%= image_tag current_user.avatar, class: "#{classes} rounded-full", alt: 'user avatar' %>
<% else %>
  <span class="inline-block rounded-full overflow-hidden bg-slate-100 <%= classes %>">
   <%= inline_svg_tag 'icons/user.svg', class: 'h-full w-full text-slate-300', aria: true, title: 'default user avatar' %>
  </span>
<% end %>
